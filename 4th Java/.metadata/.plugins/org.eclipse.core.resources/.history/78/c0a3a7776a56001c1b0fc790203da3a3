
public class MainClass {
	public static void main(String[] args) {
		// 과제 1: println, print 사용
		System.out.println("========================================");
		System.out.println("| 이름   나이    전화번호          주소      |");
		System.out.println("========================================");
		System.out.println("| 홍길동  20    010-111-2222    경기도     |");
		System.out.println("| 일지매  18    02-123-4567     서울      |");
		System.out.println("========================================");
		
		
		// 과제 2: print와 escape sequence 사
		System.out.println("========================================");
		System.out.println("\\ name   age phone         address     \\");
		System.out.println("========================================");
		System.out.println("\\ \"홍길동\" 20  010-111-2222 \'경기도\'\t\\");
		System.out.println("\\ \"일지매\" 18  02-123-4567  '서울\'  \t\\");
		
		// 과제 3: 변수를 사용
		
		String name1;		String name2;		String name3;
		int age1;			int age2;			int age3;
		boolean gender1;
		
		System.out.println("========================================");
		System.out.println("\\ name   age phone         address     \\");
		System.out.println("========================================");
		System.out.println("\"" + name1 + age1 + gender1 + phone1 + height1 + address1 + "\"");
		System.out.println("\"" + name2 + age2 + gender2 + phone2 + height2 + address2 + "\"");
		System.out.println("\"" + name3 + age3 + gender3 + phone3 + height3 + address3 + "\"");
		System.out.println("========================================");
		

	}
}
